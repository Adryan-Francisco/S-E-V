@model SEV.Models.Venda

@{
    ViewData["Title"] = "Excluir Venda";
}

<h1 class="mb-4 text-danger">🗑️ Excluir Venda</h1>

<div class="alert alert-warning">
    <strong>Atenção:</strong> Tem certeza de que deseja excluir esta venda?
</div>

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label fw-bold">Data da Venda</label>
            <div class="form-control-plaintext">@Model.DataVenda.ToString("dd/MM/yyyy")</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Cliente (CPF)</label>
            <div class="form-control-plaintext">@Model.Cliente?.CPF</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Valor Total</label>
            <div class="form-control-plaintext">@Model.Total.ToString("C")</div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="VendaId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
