@model SEV.Models.Venda

@{
    ViewData["Title"] = "Editar Venda";
}

<h1 class="mb-4 text-primary">✏️ Editar Venda</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="VendaId" />

            <div class="mb-3">
                <label asp-for="DataVenda" class="form-label fw-bold"></label>
                <input asp-for="DataVenda" class="form-control" type="date" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label fw-bold"></label>
                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Total" class="form-label fw-bold"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Salvar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
