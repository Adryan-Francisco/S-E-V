@model IEnumerable<SEV.Models.Venda>



@{
    ViewData["Title"] = "Vendas";
}

<h1 class="text-primary">
    <i class="bi bi-box-seam"></i> Vendas
</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nova Venda
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">Nenhuma venda cadastrada até o momento.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Data</th>
                <th>Cliente</th>
                <th>Total</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venda in Model)
            {
                <tr>
                    <td>@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                    <td>@venda.Cliente?.Nome</td>
                    <td>@venda.Total.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@venda.VendaId" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@venda.VendaId" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@venda.VendaId" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
