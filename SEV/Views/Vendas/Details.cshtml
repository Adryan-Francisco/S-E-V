@model SEV.Models.Venda

@{
    ViewData["Title"] = "Detalhes da Venda";
}

<h1 class="mb-4 text-primary">📄 Detalhes da Venda</h1>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Data da Venda</dt>
            <dd class="col-sm-9">@Model.DataVenda.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 fw-bold">Cliente (CPF)</dt>
            <dd class="col-sm-9">@Model.Cliente?.CPF</dd>

            <dt class="col-sm-3 fw-bold">Valor Total</dt>
            <dd class="col-sm-9">@Model.Total.ToString("C")</dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.VendaId" class="btn btn-outline-primary me-2">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar para Lista
    </a>
</div>
