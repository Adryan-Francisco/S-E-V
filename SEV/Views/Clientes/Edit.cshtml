@model SEV.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="mb-4 text-primary">Editar Cliente</h1>

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-10">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Edit" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="ClienteId" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome completo" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CPF" class="form-label fw-semibold"></label>
                        <input asp-for="CPF" class="form-control form-control-lg" placeholder="Somente números" />
                        <span asp-validation-for="CPF" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label fw-semibold"></label>
                        <input asp-for="Telefone" class="form-control form-control-lg" placeholder="Ex: (99) 99999-9999" />
                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Endereco" class="form-label fw-semibold"></label>
                        <input asp-for="Endereco" class="form-control form-control-lg" placeholder="Endereço completo" />
                        <span asp-validation-for="Endereco" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4 py-2 fw-semibold shadow-sm">
                            Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
