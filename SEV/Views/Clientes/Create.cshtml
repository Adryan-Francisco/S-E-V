@model SEV.Models.Cliente

@{
    ViewData["Title"] = "Novo Cliente";
}

<h1 class="mb-4 text-primary">Cadastrar Novo Cliente</h1>

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
                {
                    <div class="alert alert-danger">
                        <strong>Erros encontrados:</strong>
                        <ul class="mb-0">
                            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@modelError.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <form asp-action="Create" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o Nome" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CPF" class="form-label fw-semibold"></label>
                        <input asp-for="CPF" class="form-control form-control-lg" placeholder="000.000.000-00" id="cpf" />
                        <span asp-validation-for="CPF" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label fw-semibold"></label>
                        <input asp-for="Telefone" class="form-control form-control-lg" placeholder="(99) 99999-9999" id="telefone" />
                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Endereco" class="form-label fw-semibold"></label>
                        <input asp-for="Endereco" class="form-control form-control-lg" placeholder="Endereço completo" />
                        <span asp-validation-for="Endereco" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle"></i> Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CpfInput').mask('000.000.000-00');
            $('#TelefoneInput').mask('(00) 00000-0000');
        });
    </script>
}
