@model SEV.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1 class="mb-4 text-primary">Detalhes do Cliente</h1>

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <i class="bi bi-person-badge text-secondary"></i> Informações do Cliente
                </h4>

                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Nome:</dt>
                    <dd class="col-sm-8">@Model.Nome</dd>

                    <dt class="col-sm-4 fw-bold">CPF:</dt>
                    <dd class="col-sm-8">@Model.CPF</dd>

                    <dt class="col-sm-4 fw-bold">Telefone:</dt>
                    <dd class="col-sm-8">@Model.Telefone</dd>

                    <dt class="col-sm-4 fw-bold">Endereço:</dt>
                    <dd class="col-sm-8">@Model.Endereco</dd>
                </dl>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
            </div>
        </div>
    </div>
</div>
