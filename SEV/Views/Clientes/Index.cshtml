@model IEnumerable<SEV.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-4 text-primary">Clientes</h1>

<div class="mb-3 d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus-fill me-1"></i> Novo Cliente
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle-fill me-2"></i> Nenhum cliente cadastrado ainda.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Endereço</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>

                        <!-- Formatação de CPF: 000.000.000-00 -->
                        <td>
                            @(Convert.ToUInt64(item.CPF).ToString(@"000\.000\.000\-00"))
                        </td>

                        <!-- Formatação de Telefone: (00) 00000-0000 -->
                        <td>
                            @(
                                item.Telefone.Length == 11
                                ? Convert.ToUInt64(item.Telefone).ToString(@"\(00\) 00000\-0000")
                                : Convert.ToUInt64(item.Telefone).ToString(@"\(00\) 0000\-0000")
                                )
                        </td>

                        <td>@item.Endereco</td>

                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
