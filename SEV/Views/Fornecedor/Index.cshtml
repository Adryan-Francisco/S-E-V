@model IEnumerable<SEV.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<h1 class="mb-4 text-primary">📦 Fornecedores</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Novo Fornecedor
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-exclamation-circle"></i> Nenhum fornecedor cadastrado até o momento.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CNPJ)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Endereco)</th>
                    <th class="text-end" style="width: 220px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>

                        <!-- Formatando CNPJ como 00.000.000/0000-00 -->
                        <td>
                            @{
                                var cnpj = item.CNPJ?.PadLeft(14, '0');
                                var cnpjFormatado = Convert.ToUInt64(cnpj).ToString(@"00\.000\.000\/0000\-00");
                            }
                            @cnpjFormatado
                        </td>

                        <!-- Formatando telefone como (XX) XXXXX-XXXX -->
                        <td>
                            @{
                                var tel = item.Telefone?.Trim();
                                string telFormatado = tel?.Length == 11
                                ? $"({tel.Substring(0, 2)}) {tel.Substring(2, 5)}-{tel.Substring(7)}"
                                : tel?.Length == 10
                                ? $"({tel.Substring(0, 2)}) {tel.Substring(2, 4)}-{tel.Substring(6)}"
                                : tel;
                            }
                            @telFormatado
                        </td>

                        <td>@item.Endereco</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
