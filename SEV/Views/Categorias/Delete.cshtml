@model SEV.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1 class="text-danger mb-4">Excluir Categoria</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <h4 class="text-center text-danger mb-4">Tem certeza que deseja excluir esta categoria?</h4>

                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CategoriaId" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash"></i> Excluir
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
