@model SEV.Models.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
}

<h1 class="mb-4 text-primary">Cadastrar Categoria</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@modelError.ErrorMessage</p>
                            }
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Ex: Frutas, Bebidas..." />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4 fw-semibold">
                            <i class="bi bi-plus-circle me-1"></i> Criar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Voltar à Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
