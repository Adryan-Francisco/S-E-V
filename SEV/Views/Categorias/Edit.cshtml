@model SEV.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1 class="mb-4 text-primary">Editar Categoria</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Edit" method="post" novalidate>
                    <input type="hidden" asp-for="CategoriaId" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome da categoria" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i> Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
