@model SEV.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<h1 class="mb-4 text-primary">Detalhes da Categoria</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-secondary mb-3">
                    <i class="bi bi-tags"></i> Categoria
                </h4>
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Nome</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                </dl>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
            </div>
        </div>
    </div>
</div>
