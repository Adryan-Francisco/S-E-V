@model SEV.Models.ItemVenda

@{
    ViewData["Title"] = "Detalhes do Item de Venda";
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-search"></i> Detalhes do Item de Venda
</h1>

<hr />

<dl class="row">
    <dt class="col-sm-3 fw-bold">
        Venda Nº
    </dt>
    <dd class="col-sm-9">
        @Model.Venda?.VendaId
    </dd>

    <dt class="col-sm-3 fw-bold">
        Produto
    </dt>
    <dd class="col-sm-9">
        @Model.Produto?.Nome
    </dd>

    <dt class="col-sm-3 fw-bold">
        Quantidade
    </dt>
    <dd class="col-sm-9">
        @Model.Quantidade
    </dd>

    <dt class="col-sm-3 fw-bold">
        Preço Unitário
    </dt>
    <dd class="col-sm-9">
        @Model.PrecoUnitario.ToString("C")
    </dd>
</dl>

<hr />

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.ItemVendaId" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
