@model SEV.Models.ItemVenda

@{
    ViewData["Title"] = "Excluir Item de Venda";
}

<h1 class="text-danger mb-4">
    <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
</h1>

<p class="lead">Tem certeza que deseja excluir o item abaixo?</p>

<hr />

<dl class="row">
    <dt class="col-sm-3 fw-bold">Venda Nº</dt>
    <dd class="col-sm-9">@Model.Venda?.VendaId</dd>

    <dt class="col-sm-3 fw-bold">Produto</dt>
    <dd class="col-sm-9">@Model.Produto?.Nome</dd>

    <dt class="col-sm-3 fw-bold">Quantidade</dt>
    <dd class="col-sm-9">@Model.Quantidade</dd>

    <dt class="col-sm-3 fw-bold">Preço Unitário</dt>
    <dd class="col-sm-9">@Model.PrecoUnitario.ToString("C")</dd>
</dl>

<hr />

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="ItemVendaId" />

    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirmar Exclusão
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</form>
