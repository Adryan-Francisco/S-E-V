@model IEnumerable<SEV.Models.ItemVenda>

@{
    ViewData["Title"] = "Itens de Venda";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">
            <i class="bi bi-list-check me-2" aria-hidden="true"></i> Itens de Venda
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1" aria-hidden="true"></i> Novo Item
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm text-center p-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
            Nenhum item de venda cadastrado até o momento.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Venda Nº</th>
                        <th>Produto</th>
                        <th class="text-end">Quantidade</th>
                        <th class="text-end">Preço Unitário</th>
                        <th class="text-end">Total</th>
                        <th class="text-end" style="width: 170px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VendaId</td>
                            <td>@item.Produto?.Nome</td>
                            <td class="text-end">@item.Quantidade.ToString("N0")</td>
                            <td class="text-end">@item.PrecoUnitario.ToString("C")</td>
                            <td class="text-end">@((item.Quantidade * item.PrecoUnitario).ToString("C"))</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-info"
                                       title="Detalhes" data-bs-toggle="tooltip">
                                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Editar" data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Excluir" data-bs-toggle="tooltip">
                                        <i class="bi bi-trash" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
