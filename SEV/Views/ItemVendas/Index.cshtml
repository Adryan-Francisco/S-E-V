@model IEnumerable<SEV.Models.ItemVenda>

@{
    ViewData["Title"] = "Itens de Venda";
}

<div class="container">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-list-check" aria-hidden="true"></i> Itens de Venda
    </h1>

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> Novo Item
        </a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
            Nenhum item de venda cadastrado até o momento.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Venda Nº</th>
                        <th scope="col">Produto</th>
                        <th scope="col" class="text-end">Quantidade</th>
                        <th scope="col" class="text-end">Preço Unitário</th>
                        <th scope="col" class="text-end">Total</th>
                        <th scope="col" class="text-end" style="width: 150px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VendaId</td>
                            <td>@item.Produto?.Nome</td>
                            <td class="text-end">@item.Quantidade.ToString("N0")</td>
                            <td class="text-end">@item.PrecoUnitario.ToString("C")</td>
                            <td class="text-end">@((item.Quantidade * item.PrecoUnitario).ToString("C"))</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-info"
                                       title="Detalhes" aria-label="Detalhes">
                                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Editar" aria-label="Editar">
                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ItemVendaId"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Excluir" aria-label="Excluir">
                                        <i class="bi bi-trash" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>