@model SEV.Models.ItemVenda

@{
    ViewData["Title"] = "Novo Item da Venda";
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-cart-plus"></i> Adicionar Item à Venda
</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="VendaId" class="form-label fw-bold">Venda</label>
                <select asp-for="VendaId" class="form-control" asp-items="ViewBag.VendaId"></select>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProdutoId" class="form-label fw-bold">Produto</label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantidade" class="form-label fw-bold">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PrecoUnitario" class="form-label fw-bold">Preço Unitário</label>
                <input asp-for="PrecoUnitario" class="form-control" />
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
