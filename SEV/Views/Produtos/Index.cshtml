@model IEnumerable<SEV.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">
            <i class="bi bi-box-seam-fill me-2"></i> Produtos
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Novo Produto
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4">
            <i class="bi bi-info-circle-fill me-2"></i> Nenhum produto cadastrado ainda.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th class="text-end">Preço</th>
                        <th class="text-end">Estoque</th>
                        <th>Categoria</th>
                        <th>Fornecedor</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td class="text-end">@item.Preco.ToString("C")</td>
                            <td class="text-end">@item.QuantidadeEstoque</td>
                            <td>@item.Categoria?.Nome</td>
                            <td>@item.Fornecedor?.Nome</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ProdutoId"
                                       class="btn btn-sm btn-outline-info"
                                       title="Detalhes" data-bs-toggle="tooltip">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ProdutoId"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Editar" data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProdutoId"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Excluir" data-bs-toggle="tooltip">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
