@model SEV.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="mb-4 text-primary">Detalhes do Produto</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3 fw-bold">Descrição</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3 fw-bold">Preço</dt>
            <dd class="col-sm-9">R$ @Model.Preco.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Estoque</dt>
            <dd class="col-sm-9">@Model.QuantidadeEstoque</dd>

            <dt class="col-sm-3 fw-bold">Categoria</dt>
            <dd class="col-sm-9">@Model.Categoria?.Nome</dd>

            <dt class="col-sm-3 fw-bold">Fornecedor</dt>
            <dd class="col-sm-9">@Model.Fornecedor?.Nome</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId" class="btn btn-outline-primary me-2">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
    </a>
</div>
